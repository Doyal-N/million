<div class="row">
  <div class="col-sm-4">
    <h2><%= t('.sign_up', :default => 'Sign up') %></h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "form-group") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div><%= f.label :email %><br/>
        <%= f.email_field :email, class: 'form-control' %></div>

      <div><%= f.label :name %><br/>
        <%= f.text_field :name, class: 'form-control' %></div>

      <div><%= f.label :password %><br/>
        <%= f.password_field :password, class: 'form-control' %></div>

      <div><%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, class: 'form-control' %></div>

      <div><%= f.submit t('.sign_up', :default => 'Sign up'), class: 'btn btn-primary mt-2' %></div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
